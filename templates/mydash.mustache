{{!
    @template theme_uognynteen/columns2

    Admin time setting template.

    uognynteen 2 column layout template.

    Context variables required for this template:
    * sitename - The name of the site
    * output - The core renderer for the page
    * bodyattributes - attributes for the body tag as a string of html attributes
    * sidepreblocks - HTML for the blocks
    * haspreblocks - true if there are side-pre blocks on this page
    * sidetopblocks - HTML for the blocks
    * hastopblocks - true if there are side-top blocks on this page
    * navdraweropen - true if the nav drawer should be open on page load
    * regionmainsettingsmenu - HTML for the region main settings menu
    * hasregionmainsettingsmenu - There is a region main settings menu on this page.

    Example context (json):
    {
        "sitename": "Moodle",
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Test page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headings make html validators happier</h1>"
         },
        "bodyattributes":"",
        "sidepreblocks": "<h2>Blocks html goes here</h2>",
        "sidetopblocks": "<h2>Blocks html goes here</h2>",
        "haspreblocks":true,
        "hastopblocks":true,
        "navdraweropen":true,
        "regionmainsettingsmenu": "",
        "hasregionmainsettingsmenu": false
    }
}}
{{> theme_uognynteen/head }}

<body {{{ bodyattributes }}}>

<div id="page-wrapper">

    {{{ output.standard_top_of_body_html }}}

    {{>theme_uognynteen/navbar}}

    <div id="page" class="container-fluid">
        {{{ output.full_header }}}
        {{{ output.useralert }}}

        <div id="page-content" class="row">
            <div id="region-main-box" class="col-12">
                {{#hastopblocks}}
                <section data-region="blocks-row" class="d-print-none">
                    {{{ sidetopblocks }}}
                </section>
                {{/hastopblocks}}

                <section id="region-main" {{#haspreblocks}}class="has-blocks mb-3"{{/haspreblocks}}>
                    {{#hasregionmainsettingsmenu}}
                    <div id="region-main-settings-menu" class="d-print-none {{#haspreblocks}}has-blocks{{/haspreblocks}}">
                        <div> {{{ output.region_main_settings_menu }}} </div>
                    </div>
                    {{/hasregionmainsettingsmenu}}

                    <div class="card">
                        <div class="card-body dashboard-inner {{#haspostblocks}}has-dash-post{{/haspostblocks}}">
                            {{#hasregionmainsettingsmenu}}
                                <div class="region_main_settings_menu_proxy"></div>
                            {{/hasregionmainsettingsmenu}}
                            {{{ output.course_content_header }}}
                            {{{ output.main_content }}}

                            {{#haspostblocks}}
                                {{{ sidepostblocks }}}
                            {{/haspostblocks}}

                            {{{ output.activity_navigation }}}
                            {{{ output.course_content_footer }}}
                        </div>
                    </div>
                </section>

                {{#haspreblocks}}
                <section data-region="blocks-column" class="d-print-none">
                    {{{ sidepreblocks }}}
                </section>
                {{/haspreblocks}}

                {{#hasblocksslider2}}
                <section data-region="blocks-column" class="d-print-none hidden-print modal fade" id="slider2_blocksmodal" aria-labelledby="blockslider2modal">
                    {{{ blocksslider2 }}}
                </section>
                {{/hasblocksslider2}}
                {{#hasblocksslider3}}
                <section data-region="blocks-column" class="d-print-none hidden-print modal fade" id="slider3_blocksmodal" aria-labelledby="blockslider3modal">
                    {{{ blocksslider3 }}}
                </section>
                {{/hasblocksslider3}}
                {{#hasblocksslider4}}
                <section data-region="blocks-column" class="d-print-none hidden-print modal fade" id="slider4_blocksmodal" aria-labelledby="blockslider4modal">
                    {{{ blocksslider4 }}}
                </section>
                {{/hasblocksslider4}}

                {{{ output.blockmodalbuttons }}}


            </div>
        </div>
    </div>
    {{{ output.standard_after_main_region_html }}}

    {{> theme_boost/nav-drawer }}
    {{> theme_uognynteen/footer }}
</div>

</body>

</html>
{{#js}}
require(['theme_boost/loader']);
require(['theme_boost/drawer'], function(mod) {
    mod.init();
});
{{/js}}
